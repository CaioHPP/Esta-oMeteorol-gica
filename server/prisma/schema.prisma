// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"

  output = "../ERD.pdf"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Leitura {
  id              Int               @id @default(autoincrement())
  createdAt       DateTime          @default(now())
  Temperatura     Temperatura[]
  Pressao         Pressao[]
  Altitude        Altitude[]
  VelocidadeVento VelocidadeVento[]
  DirecaoVento    DirecaoVento[]
  Precipitacao    Precipitacao[]
  UmidadeSolo     UmidadeSolo[]
  UmidadeRelativa UmidadeRelativa[]
}

model Temperatura {
  id            Int     @id @default(autoincrement())
  sensor        String
  valor         Int
  unidade       String
  ordemGrandeza Int
  leituraId     Int
  leitura       Leitura @relation(fields: [leituraId], references: [id])
}

model Pressao {
  id            Int     @id @default(autoincrement())
  sensor        String
  valor         Int
  unidade       String
  ordemGrandeza Int
  leituraId     Int
  leitura       Leitura @relation(fields: [leituraId], references: [id])
}

model Altitude {
  id            Int     @id @default(autoincrement())
  sensor        String
  valor         Int
  unidade       String
  ordemGrandeza Int
  leituraId     Int
  leitura       Leitura @relation(fields: [leituraId], references: [id])
}

model VelocidadeVento {
  id            Int     @id @default(autoincrement())
  sensor        String
  media         Int
  maximo        Int
  unidade       String
  ordemGrandeza Int
  leituraId     Int
  leitura       Leitura @relation(fields: [leituraId], references: [id])
}

model DirecaoVento {
  id            Int     @id @default(autoincrement())
  sensor        String
  valor         Int
  unidade       String
  ordemGrandeza Int
  leituraId     Int
  leitura       Leitura @relation(fields: [leituraId], references: [id])
}

model Precipitacao {
  id            Int     @id @default(autoincrement())
  sensor        String
  valor         Int
  unidade       String
  ordemGrandeza Int
  leituraId     Int
  leitura       Leitura @relation(fields: [leituraId], references: [id])
}

model UmidadeSolo {
  id            Int     @id @default(autoincrement())
  sensor        String
  valor         Int
  unidade       String
  ordemGrandeza Int
  leituraId     Int
  leitura       Leitura @relation(fields: [leituraId], references: [id])
}

model UmidadeRelativa {
  id            Int     @id @default(autoincrement())
  sensor        String
  valor         Int
  unidade       String
  ordemGrandeza Int
  leituraId     Int
  leitura       Leitura @relation(fields: [leituraId], references: [id])
}
